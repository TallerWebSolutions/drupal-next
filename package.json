{
  "name": "dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "General-purpose react-driven dashboard for any internal tasks.",
  "license": "UNLINCENSED",
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "main": "next.config.js",
  "scripts": {
    "dev": "yarn next",
    "format": "prettier-eslint 'pages/**/*.js' 'src/**/*.js' --write",
    "format:package": "sort-package-json",
    "lint": "eslint pages src",
    "now-build": "next build",
    "precommit": "lint-staged",
    "prepush": "yarn qa",
    "qa": "yarn lint && yarn test",
    "test": "echo 'Not implemented yet'"
  },
  "dependencies": {
    "next": "^8.0.0-canary.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.17.1"
  },
  "lint-staged": {
    "package.json": [
      "yarn format:package",
      "git add"
    ],
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
