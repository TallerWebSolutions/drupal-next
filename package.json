{
  "name": "next-on-drupal",
  "version": "0.1.0",
  "private": true,
  "description": "Boilerplate for a NextJS based on Drupal backend application.",
  "repository": "ssh://git@bitbucket.org/taller-repo/next-on-drupal.git",
  "license": "UNLINCENSED",
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "main": "next.config.js",
  "scripts": {
    "build": "yarn build:next && yarn build:server",
    "build:next": "next build",
    "build:server": "webpack --config config/webpack/webpack.server.js",
    "clean": "rm -Rf ./build && rm -Rf ./node_modules/.cache",
    "dev": "yarn build:server && concurrently \"yarn build:server --watch\" \"DEBUG=next-on-drupal:* nodemon ./build/server.js -w ./build/server.js\"",
    "dev:server": "yarn build && concurrently \"yarn build:server --watch\" \"NODE_ENV=production DEBUG=next-on-drupal:* nodemon ./build/server.js -w ./build/server.js\"",
    "format": "prettier-eslint 'src/**/*.js' --write",
    "format:package": "sort-package-json",
    "lint": "eslint src",
    "now-build": "yarn build",
    "precommit": "lint-staged",
    "prepush": "yarn qa",
    "qa": "yarn lint && yarn test",
    "start": "NODE_ENV=production node ./build/server.js",
    "start:dev": "node ./build/server.js",
    "test": "echo 'Not implemented yet'"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "package.json": [
      "yarn format:package",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-client": "^2.4.8",
    "apollo-link-http": "^1.5.9",
    "classnames": "^2.2.6",
    "debug": "^4.1.1",
    "esm": "^3.2.16",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "next": "^8.0.0-canary.2",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "react-powerplug": "^1.0.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.10.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.10",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.17.1",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  }
}
