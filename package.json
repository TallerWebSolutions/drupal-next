{
  "name": "drupal-next",
  "version": "0.1.0",
  "private": true,
  "description": "Boilerplate for a NextJS based and Drupal backed application.",
  "repository": "ssh://git@bitbucket.org/taller-repo/drupal-next.git",
  "license": "UNLINCENSED",
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "prettier-eslint 'pages/**/*.js' --write",
    "format:package": "sort-package-json",
    "lint": "eslint pages",
    "now-build": "yarn build",
    "precommit": "lint-staged",
    "prepush": "yarn qa",
    "qa": "yarn lint && yarn test",
    "test": "echo 'Not implemented yet'"
  },
  "dependencies": {
    "antd": "^3.12.1",
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-client": "^2.4.8",
    "apollo-link-http": "^1.5.9",
    "classnames": "^2.2.6",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^2.2.1",
    "next": "^8.0.0-canary.2",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "react-gravatar": "^2.6.3",
    "react-powerplug": "^1.0.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.17.1"
  },
  "lint-staged": {
    "package.json": [
      "yarn format:package",
      "git add"
    ],
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
