{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "rules": {
    "react/react-in-jsx-scope": 2,
    "react/jsx-curly-spacing": [2, { "when": "always", "children": true }]
  },
  "overrides": [
    {
      "files": ["*.test.js", "tests/**/*"],
      "globals": {
        "jest": false,
        "describe": false,
        "expect": false,
        "it": false,
        "beforeEach": false,
        "beforeAll": false,
        "afterEach": false,
        "afterAll": false
      }
    }
  ]
}
